<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/homepage"
        android:textAlignment="center"
        android:layout_marginTop="135dp"
        android:fontFamily="@font/poppin"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppin"
            android:text="Welcome"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/username_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppin"
            android:layout_marginTop="40dp"
            android:text="Username"
            android:textColor="@color/blue"
            android:textSize="16sp" />
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/your"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:fontFamily="@font/poppin"
            android:layout_height="wrap_content"
            android:text="Your"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="220dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/email_third"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppin"
            android:text="email"
            android:textColor="@color/blue"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="220dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/hasbeen"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:fontFamily="@font/poppin"
            android:layout_height="wrap_content"
            android:text="has been activate"
            android:layout_marginTop="220dp"
            android:paddingLeft="5dp"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/your2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/poppin"
            android:text="Your"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hasbeen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/poppin"
            android:text="has been register"
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/phone_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/poppin"
        android:text="phone"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="16sp" />
</RelativeLayout>